<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.trustathanas.absaclone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activities.auth.LoginActivity">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".activities.resetaccount.ResetPasscodeActivity" />
        <activity android:name=".activities.TermsActivity" />
        <activity android:name=".activities.contactus.ContactsActivity" />
        <activity android:name=".activities.resetaccount.PasscodeLockedActivity" />
        <activity android:name=".activities.resetaccount.ResetActivity" />
        <activity android:name=".activities.resetaccount.LinkDeviceActivity" />
        <activity android:name=".activities.home.MainActivity" />
        <activity android:name=".activities.register.RegisterActivity" />
        <activity android:name=".activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>